<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lvgou.qdd.activity.message.MessageDetailActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="48dp">

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_arrow_back"
            android:id="@+id/MessageDetailActivity_backButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息详情"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/middleMessage" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/systemGrayBackground"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/MessageDetailActivity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_centerHorizontal="true"
            android:text="今天10:00"
            android:textColor="#B4B4B4"
            android:textSize="11sp"/>

        <ImageView
            android:id="@+id/MessageDetailActivity_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/messageDetail"
            android:layout_below="@+id/MessageDetailActivity_time"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MessageDetailActivity_time"
            android:layout_marginTop="13dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/MessageDetailActivity_icon"
            android:layout_marginLeft="10dp"
            android:background="#ECECEC">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签多多电子章上线了"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="14dp"
                android:textSize="16sp"
                />
            

        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>
