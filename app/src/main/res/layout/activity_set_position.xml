<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lvgou.qdd.activity.sign.SetPositionActivity">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:id="@+id/SetPositionActivity_nav"
                 android:layout_width="match_parent"
                 android:layout_height="48dp">
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_arrow_back"
            android:id="@+id/SetPositionActivity_backButton" />
        <TextView
            android:id="@+id/SignShowActivity_middleMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合同名称"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:gravity="center"/>
        <Button
            android:id="@+id/SetPositionActivity_messageDetail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/sign_detail"/>
    </FrameLayout>


    <View
        android:id="@+id/sepreate"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/SetPositionActivity_nav"
        android:background="@color/systemGrayBackground">
    </View>

    <ListView
        android:id="@+id/SetPositionActivity_listView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_below="@id/sepreate"
        android:divider="#00000000"
        android:dividerHeight="0dip"  >
    </ListView>


    <ImageView
        android:id="@+id/SetPositionActivity_signature"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/SetPositionActivity_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="@color/systemWhite"
        android:background="@drawable/button_radius_background"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"/>

</RelativeLayout>
