<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="165dp">

    <ImageView
        android:id="@+id/SignatureListActivity_listitem_icon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"/>

    <Button
        android:id="@+id/SignatureListActivity_delete_button"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="删除"
        android:textSize="13sp"
        android:background="@drawable/delete_signature_button"/>

    <ImageView
        android:id="@+id/choose_person_signature_unchoose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/choose_signature_unchoose"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/choose_person_signature_choose"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/choose_signature_choose"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"/>

</RelativeLayout>
