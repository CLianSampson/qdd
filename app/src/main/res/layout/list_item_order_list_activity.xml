<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >
    
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/systemGrayBackground"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/OrderListActivity_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="套餐类型: 个人套餐A"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/systemGray"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期: 永久"
            android:textSize="11sp"
            android:textColor="#ff0000"
            android:layout_marginTop="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/OrderListActivity_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:text="价格:  100元"
        android:textSize="13sp"
        android:textColor="@color/systemGray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/OrderListActivity_use_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可使用次数:  10次"
            android:textSize="13sp"
            android:textColor="@color/systemGray"
            android:layout_marginLeft="20dp"/>


        <TextView
            android:id="@+id/OrderListActivity_sign_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签约有效期:  15天"
            android:textSize="13sp"
            android:textColor="@color/systemGray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#d1d1d1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/OrderListActivity_orderId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="订单编号:"
        android:textColor="@color/systemGray"
        android:layout_marginLeft="20dp"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/OrderListActivity_order_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:text="下单时间:"
        android:textColor="@color/systemGray"
        android:textSize="13sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#d1d1d1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <!--
       <Button
           android:id="@+id/OrderListActivity_goto_pay"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/button_radius_background"
           android:text="去付款"
           android:textColor="@color/systemWhite"
           android:textSize="13sp"
           android:layout_marginTop="11.5dp"
           android:layout_marginBottom="14dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"
           />
        -->

       <TextView
           android:id="@+id/OrderListActivity_goto_pay"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/button_radius_background"
           android:text="去付款"
           android:textColor="@color/systemWhite"
           android:textSize="13sp"
           android:layout_marginTop="11.5dp"
           android:layout_marginBottom="14dp"
           android:paddingTop="7dp"
           android:paddingBottom="7dp"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"
           android:clickable="true"
           />

   </RelativeLayout>

</LinearLayout>